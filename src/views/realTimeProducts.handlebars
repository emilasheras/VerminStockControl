{{!-- Desc --}}
<section>
	<h1>Real Time Products Page.</h1>
	<p>Current name: {{name}}</p>
</section>
<section>
	<h2>Current Users</h2>
	<ul id="current-users">
		{{!-- ...populated with js --}}
	</ul>
</section>

{{!-- Product Form --}}
<section>
	<h2>Product Form</h2>
	<form id="add-product-form">
		{{!-- The inputs are based on the rules of ProductModel.js - So as not to conflict with the saving mechanism --}}
		{{!-- id ? autogenerated --}}
		<input type="text" 		name="title" 		placeholder="Title">
		<input type="text" 		name="description" 	placeholder="Description">
		<input type="text" 		name="code" 		placeholder="Code">
		<input type="number" 	name="price" 		placeholder="Price">
		<input type="number" 	name="stock" 		placeholder="Stock">
		<input type="text" 		name="category" 	placeholder="Category">
		<input type="text" 		name="thumbnails" 	placeholder="Thumbnails" disabled="true">

		<button type="button" id="add-product-button">Add Product</button>
	</form>
</section>

{{!-- Products --}}
<section class="d-flex-column">
	<h2>All Products</h2>
	<div class="d-flex products-container" id="all-products-container">
		{{!-- ...populated with js --}}
	</div>
</section>

